body
  hobo()

// main elements
h1, h2, h3
  gill()
  text-transform uppercase

h1
  font-size 48px

h2
  font-size 36px

h3
  font-size 22px
  &.big
    font-size 27px

h4
  font-size 28px

h5
  text-align center
  font-size 24px
  line-height 26px

a
  transition all 0.3s ease
  text-decoration none
  color inherit

a.text
  background-image linear-gradient(to bottom, $green 0%, $green  100%)
  background-position 0 100%
  background-repeat no-repeat
  background-size 0 100%
  transition background-size 0.3s ease-in-out
  &:hover
    background-size 100% 100%

p
  font-size 18px
  line-height 22px

small
  font-size 12px
  line-height 14px

.flex
  display flex
  justify-content space-between

.flex--col
  display flex
  flex-direction column
  justify-content space-between

nav
  gill()
  text-transform uppercase
  font-size 16px

  .nav-content
    display flex
    justify-content space-between

  .burger
    display none
    cursor pointer
    svg
      width 20px
      display inline-block
      line
        stroke $blue
        stroke-width 4px

.spacing
  display none
  width 100%
  height 20px

section, nav, footer
  position relative
  .content
    width 100%
    max-width 1280px
    margin 0 auto

@media only screen and (max-width: 1011px)
  h4
    font-size 22px

@media only screen and (max-width: 800px)
  h1
    font-size 44px

  h2
    font-size 33px

  h3
    font-size 20px
    &.big
      font-size 24px

  h4
    font-size 25px

  h5
    font-size 22px
    line-height 24px

  nav
    .burger
      display block
    .nav-content
      height 0px
      flex-direction column
      transition height 0.5s ease
      a
        margin-top 10px
      &.open
        height 104px

  .spacing
    display block

@media only screen and (max-width: 500px)
  h5
    font-size 16px
    line-height 18px

@media only screen and (max-width: 410px)
  h1
    font-size 30px

  h2
    font-size 30px

  h3
    font-size 18px
    &.big
      font-size 22px

  h4
    font-size 23px

  h5
    font-size 12px
    line-height 13px


// alignments
$alignments := {left: left, right: right, center: center}

for k, v in $alignments

  .{k}--text
    text-align v

// padding and margins
$space_names := {
  p: padding,
  m: margin,
}

for n in 0..10

  for k, v  in $space_names

    .{k}l-{n}
      {v}-left n*$space !important

    .{k}r-{n}
      {v}-right n*$space !important

    .{k}t-{n}
      {v}-top n*$space !important

    .{k}b-{n}
      {v}-bottom n*$space !important

    .{k}x-{n}
      {v}-left n*$space !important
      {v}-right n*$space !important

    .{k}y-{n}
      {v}-top n*$space !important
      {v}-bottom n*$space !important

    .{k}a-{n}
      {v} 0 !important

// content and columns layout
.content
  display flex

.col-content
  padding 30px 52px 40px 52px

@media only screen and (max-width: 800px)
  .col-content.titles
    padding 2% 52px 2.5% 52px

  .col-content
    padding 30px 52px 30px 52px

for n in 1..5
  .col-layout--{n}
    flex-wrap wrap
    for m in 1..n
      .col--{m}
        width (100% / n) * m
        &--less
          width (100% / n) * m - (10% / n)
        &--more
          width (100% / n) * m + (10% / n)

@media only screen and (max-width: 808px)
  for n in 1..5
    .col-layout--{n}
      for m in 1..n
        if (n <= 3)
          .col--{m}
            width 100%
            &--less, &--more
              width 100%


// color classes
for name, color in $colors
  .{name}--bg
    background-color color
    border-color color

  .{name}--text
    color color !important

// adjust vertical sizes
for n in 1..10
  .v-sized--{n*10}
    position relative
    .v-sized--content
      box-sizing border-box
      position absolute
      width 100%
      height 100%

  .v-sized--{n*10}::after
    content ''
    display block
    padding-bottom n*10%

// globals
.new-window
  display inline-block
  opacity 0
  // transition opacity 0.1s ease
  width 28px
  path
    fill $white

a[target=_blank]:hover
  .new-window
    opacity 1

.clear
  clear both