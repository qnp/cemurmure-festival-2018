@import 'global/fonts.styl'
@import 'global/mixins.styl'
@import 'global/variables.styl'
@import 'global/generic.styl'
@import 'global/layout.styl'

nav
  a:hover
    color $green

.logos
  display flex
  justify-content space-between
  flex-wrap wrap
  img
    margin 0 14px

#logo-1
  height 31px

#logo-2
  height 35px

#logo-3
  height 27px

#logo-4
  height 19px

#logo-5
  height 20px

#logo-6
  height 30px

#logo-7
  height 41px

#logo-8
  height 34px

.groups
  position relative
  .group
    padding-bottom 34px
    h1
      max-width 460px
      transition color 0.3s ease
    p
      max-width 350px
      transition color 0.3s ease
    img
      width 100%
      max-width 480px
      position absolute
      top 0
      right 0
      opacity 0
      transition opacity 0.3s ease
    &:hover
      h1, p
        color $white
      img
        opacity 1

